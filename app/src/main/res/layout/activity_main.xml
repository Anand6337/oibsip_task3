<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/solution_screen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/result_screen"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="12dp"
        android:textAlignment="textEnd"
        android:textColor="@color/black"
        android:textSize="42dp" />
    <TextView
        android:id="@+id/result_screen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="64dp"
        android:textColor="@color/black"
        android:textAlignment="textEnd"
        android:layout_above="@id/buttons_layout"
        android:layout_margin="12dp"
        />

    <LinearLayout
        android:id="@+id/buttons_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#B8B8B8"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
             android:gravity="center"
            android:orientation="horizontal">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_c"
            android:backgroundTint="#DF0000"
            android:layout_width="72dp"
            android:layout_height="72dp"
            app:cornerRadius="37dp"
            style="@style/Animation.Design.BottomSheetDialog"
           android:text="C"
            android:textSize="32dp"
            android:layout_margin="12dp" />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_openbracket"
                android:backgroundTint="#4A4A4A"
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="37dp"
                style="@style/Animation.Design.BottomSheetDialog"
                android:text="("
                android:textSize="32dp"
                android:layout_margin="12dp" />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_closeBracket"
                android:backgroundTint="#4A4A4A"
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="37dp"
                style="@style/Animation.Design.BottomSheetDialog"
                android:text=")"
                android:textSize="32dp"
                android:layout_margin="12dp" />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_divide"
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="37dp"
                style="@style/Animation.Design.BottomSheetDialog"
                android:backgroundTint="#D15502"
                android:text="/"
                android:textSize="32dp"
                android:layout_margin="12dp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_7"
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="37dp"
                style="@style/Animation.Design.BottomSheetDialog"
                android:text="7"
                android:textSize="32dp"
                android:layout_margin="12dp" />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_8"
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="37dp"
                style="@style/Animation.Design.BottomSheetDialog"
                android:text="8"
                android:textSize="32dp"
                android:layout_margin="12dp" />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_9"
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="37dp"
                style="@style/Animation.Design.BottomSheetDialog"
                android:text="9"
                android:textSize="32dp"
                android:layout_margin="12dp" />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_multiplication"
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="37dp"
                style="@style/Animation.Design.BottomSheetDialog"
                android:backgroundTint="#D15502"
                android:text="*"
                android:textSize="32dp"
                android:layout_margin="12dp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_4"
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="37dp"
                style="@style/Animation.Design.BottomSheetDialog"
                android:text="4"
                android:textSize="32dp"
                android:layout_margin="12dp" />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_5"
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="37dp"
                style="@style/Animation.Design.BottomSheetDialog"
                android:text="5"
                android:textSize="32dp"
                android:layout_margin="12dp" />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_6"
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="37dp"
                style="@style/Animation.Design.BottomSheetDialog"
                android:text="6"
                android:textSize="32dp"
                android:layout_margin="12dp" />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_addition"
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="37dp"
                style="@style/Animation.Design.BottomSheetDialog"
                android:backgroundTint="#D15502"
                android:text="+"
                android:textSize="32dp"
                android:layout_margin="12dp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_1"
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="37dp"
                style="@style/Animation.Design.BottomSheetDialog"
                android:text="1"
                android:textSize="32dp"
                android:layout_margin="12dp" />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_2"
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="37dp"
                style="@style/Animation.Design.BottomSheetDialog"
                android:text="2"
                android:textSize="32dp"
                android:layout_margin="12dp" />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_3"
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="37dp"
                style="@style/Animation.Design.BottomSheetDialog"
                android:text="3"
                android:textSize="32dp"
                android:layout_margin="12dp" />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_subtraction"
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="37dp"
                style="@style/Animation.Design.BottomSheetDialog"
                android:backgroundTint="#D15502"
                android:text="-"
                android:textSize="32dp"
                android:layout_margin="12dp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_allClear"
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="37dp"
                style="@style/Animation.Design.BottomSheetDialog"
                android:text="AC"
                android:textSize="22dp"
                android:layout_margin="12dp" />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_0"
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="37dp"
                style="@style/Animation.Design.BottomSheetDialog"
                android:text="0"
                android:textSize="32dp"
                android:layout_margin="12dp" />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_point"
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="37dp"
                style="@style/Animation.Design.BottomSheetDialog"
                android:text="."
                android:textSize="32dp"
                android:layout_margin="12dp" />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_answer"
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="37dp"
                style="@style/Animation.Design.BottomSheetDialog"
                android:backgroundTint="#12B300"
                android:text="="
                android:textSize="32dp"
                android:layout_margin="12dp" />

        </LinearLayout>


    </LinearLayout>


</RelativeLayout>